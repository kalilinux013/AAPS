public class powerof2check {
    public static boolean is_power_of_two(int n) {
        return n > 0 && (n & (n - 1)) == 0;
    }

    public static void main(String[] args) {
        int num = 16;
        System.out.println(num + " is power of 2: " + is_power_of_two(num));
    }
}

// time complexity: O(1)
// space complexity: O(1)
